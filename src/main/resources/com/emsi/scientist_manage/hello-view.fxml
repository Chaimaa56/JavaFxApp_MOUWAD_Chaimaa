            <TableColumn fx:id="colName" prefWidth="100.0" text="Name" />
            <TableColumn fx:id="colYearsOfExperience" prefWidth="75.0" text="years" />
            <TableColumn fx:id="colFieldOfStudy" prefWidth="75.0" text="field" />
            <TableColumn fx:id="colResearchInterests" prefWidth="75.0" text="research" />
            <TableColumn fx:id="colPublications" prefWidth="75.0" text="pub" />
            <TableColumn fx:id="colAwardsAndHonors" prefWidth="75.0" text="awards" />

        </columns>
    </TableView>
    <TextField fx:id="tfId" layoutX="14.0" layoutY="374.0" prefWidth="75.0" promptText="ID" />
    <TextField fx:id="tfName" layoutX="101.0" layoutY="374.0" prefWidth="100.0" promptText="Name" />
    <TextField fx:id="tfYearsOfExperience" layoutX="101.0" layoutY="374.0" prefWidth="100.0" promptText="Name" />
    <TextField fx:id="tfFieldOfStudy" layoutX="101.0" layoutY="374.0" prefWidth="100.0" promptText="Name" />
    <TextField fx:id="tfResearchInterests" layoutX="101.0" layoutY="374.0" prefWidth="100.0" promptText="Name" />
