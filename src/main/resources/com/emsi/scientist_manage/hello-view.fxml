    <Button fx:id="btnAdd" layoutX="296.0" layoutY="374.0" mnemonicParsing="false" onAction="#handleAddScientist" text="Add" />
    <Button fx:id="btnDelete" layoutX="337.0" layoutY="374.0" mnemonicParsing="false" onAction="#handleDeleteScientist" text="Delete" />
</AnchorPane>
